       apdlist.Add(a1);
       apdlist.Add(a2);
       apdlist.Add(a3);
       apdlist.Add(a4); 
       
       @Html.Partial("Joint", apdlist);
    }
</div>

<div id="div_Trust" style="display:none;">
@Html.Partial("Trust")
</div>




<script type="text/javascript">
    
    $("#anchor1").click(function () {
        $('html, body').animate({
            scrollTop: $("#typeac").offset().top
        }, 1500);
    });
    $("#Individual").click(function () {
        if (ScrollValidate('divLeadCapture', 'btnLead')) {
            $('#div_Individual').show();
            $('#div_Joint').hide();
            $('#div_Trust').hide();
            $('#div_TrustCompany').hide();
            $('#div_TrustIndividual').hide();
            $('#hiddenAT').val('Individual');
            $('html, body').animate({
                scrollTop: $("#div_Individual").offset().top
            }, 1500);
            setEmail();
        } else {
            $('html, body').animate({
                scrollTop: $("#divLeadCapture").offset().top
            }, 1500);
        }
    });
    $("#Joint").click(function () {
        if (ScrollValidate('divLeadCapture', 'btnLead')) {
            $('#div_Joint').show();
            $('#div_Individual').hide();
            $('#div_Trust').hide();
            $('#div_TrustCompany').hide();
            $('#div_TrustIndividual').hide();
            $('#hiddenAT').val('Joint');
            $('html, body').animate({
                scrollTop: $("#div_Joint").offset().top
            }, 1500);
